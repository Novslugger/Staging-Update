            </tr>
            
            <tr>
                <td></td>
                <td><br /></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <input type="button" id="add_afactivity_btn_new" value="Add" />
                </td>
            </tr>
        </tbody>
    </table>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#add_afactivity_btn_new').on('click', function () {
            add_activity_btn();
        });

    });


</script>
