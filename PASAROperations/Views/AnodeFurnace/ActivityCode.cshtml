@{
    ViewBag.Title = "Activity Code Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/Content/AF_ActivityTable.css")
<br />

<!--insert html codes here-->
<div id="DialogAFActivity_Add" style="overflow: hidden;"></div>
<div id="DialogAFActivity_Edit" style="overflow: hidden;"></div>
<div class="row">
    <div id="">
        <!--&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<input type="button" id="add_afactivity_btn" value="Add" /> -->
        <img width="20" height="20" title="Add Now" class="btn_label_span" id="anodetrans_add_btn" style="padding: 2px 2px 10px 15px;" src="../Images/red_plus.png">
        <span title="Add Now" class="btn_label_span" id="add_afactivity_btn">Add Item </span>
    </div>
    <div class="text-center" style="overflow-y: auto; height:900px">
        <table id="AF_ActivityCode_Table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center"><h5>#</h5></th>
                    <th class="text-center"><h5>Activity Name</h5></th>
                    <th class="text-center"><h5>Activity Description</h$></th>
                    <th class="text-center"><h5>Activity Type</h5></th>
                    <th class="text-center"><h5>Action</h5></th>
                </tr>
            </thead>
            <tbody class="text-center">
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#DialogAFActivity_Add').dialog({
                autoOpen: false,
                width: 320,
                height: 350,
                resizable: false,
                draggable: true,
                title: 'Activity Entry',
                closeText: 'Close[x]',
                modal: true,
                position: [1150, 170]
            });
        });
        $(function () {
            $('#DialogAFActivity_Edit').dialog({
                autoOpen: false,
                width: 300,
                height: 350,
                resizable: false,
                draggable: true,
                title: 'Activity Edit',
                closeText: 'Close[x]',
                modal: true,
                position: [1150, 170]
            });
        });
    });
</script>
