<div id="partial_changestartdate">
    <h6>Change Start Date</h6>

    <div id="cstartdate_table_div">
        <table id="cstartdate_table">
            <tr>
                <th>Cycle Order</th>
                <th>Cycle #</th>
                <th>Start</th>
                <th>End</th>
                <th>Duration</th>
                <th>Status</th>
            </tr>
        </table>
    </div>
    
    <div>

          <table id="start_time_table_cstime">
            <tr><td rowspan="2" class="label_datetype">Change Start Time : &nbsp;</td>
                <td class="label_date">Date</td><td class="label_date">Time (hh:mm)</td>
                
            </tr>
              
            <tr>
                <td id="start_date_cstime"><input id="start_date_input_cstime" type="text"  value="@ViewBag.csdate_start_time.ToString("MM/dd/yyyy")"/></td>
                <td id="start_time_cstime">
            <select id="start_time_hr_cstime">
            @{
                int hr = Int32.Parse(ViewBag.csdate_start_time.ToString("HH"));
                
                
                for (int x = 0; x <= 23; x++ )
                { 
                if (@x <= 9){

                    if (@x == @hr)
                    {  <option value="@x" selected="selected">@("0" + @x)</option> }
                    else { <option value="@x">@("0" + @x)</option> }          
                }
                      
                      
                      else{

                     if (@x == @hr)
                          {  <option value="@x" selected="selected">@x</option> }
                    else { <option value="@x">@x</option> }          
                

                      }
                }
                }
                                                          
            </select>&nbsp;:
            <select id="start_time_min_cstime">
              @{
                  int min = Int32.Parse(ViewBag.csdate_start_time.ToString("mm"));
                
                
                for (int x = 0; x <= 59; x++ )
                { 
                if (@x <= 9){

                    if (@x == @min)
                    {  <option value="@x" selected="selected">@("0" + @x)</option> }
                    else { <option value="@x">@("0" + @x)</option> }          
                }
                      
                      
                      else{

                          if (@x == @min)
                          {  <option value="@x" selected="selected">@x</option> }
                    else { <option value="@x">@x</option> }          
                

                      }
                }
                }                                               
            </select>

</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input id="cstime_change_btn" type="button" value="Change" /></td></tr>

          </table>


    </div>
    <div id="cstime_message">
    </div>
    </div>

<script type="text/javascript">
        $(document).ready(function () {

            $("#start_date_input_cstime").datepicker({
                showOn: 'button',
                buttonText: 'Show Date',
                buttonImageOnly: true,
                buttonImage: serverpath + '/Images/calendar.png',
                dateFormat: 'mm/dd/yy',
                constrainInput: true
            });

            $(".ui-datepicker-trigger").mouseover(function () {
                $(this).css('cursor', 'pointer');

            });
       
        });
            

    </script>