                        }
                    }
                </select>&nbsp;:
            <select id="start_time_min_input2">
                @{
                    int dmin = Int32.Parse(ViewBag.SFP_ADate.ToString("mm"));


                    for (int x = 0; x <= 59; x++)
                    {
                        if (@x <= 9)
                        {

                            if (@x == @dmin)
                            {  <option value="@x" selected="selected">@("0" + @x)</option> }
                            else
                            { <option value="@x">@("0" + @x)</option> }
