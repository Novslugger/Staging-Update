@Scripts.Render("~/bundles/jqueryui")


<div id="Dialogcsm_Add" style="overflow: hidden;"></div>
<div id="Dialogcsm_Edit" style="overflow: hidden;"></div>
<div id="container">
    <div id="refine_div">
        <h5>CSM Timelog</h5>
        <img width="20" height="20" title="Add Now" id="add_sfp_entry_btn" src="../Images/red_plus.png">&nbsp;&nbsp;<span title="Add Now" class="btn_label_span" id="add_sfp_entry_lnk">Add Item </span>
        <div id="pageNavPosition"></div>
        <br>
        <br>
        <table id="refinery_csm_tbl" class="refine_table">

            <tr>
                <th style="width: 2%;">Block</th>
                <th style="width: 2%;">Start Time</th>
                <th style="width: 2%;">End Time</th>
                <th style="width: 2%;">Status</th>
                <th style="width: 2%;">Reason</th>
                <th style="width: 2%;">No. of Cells Stripped</th>
            </tr>
            @for (var a = 1; a <= 1; a++)
            {
                <tr id="tr_@a">
                    <td id="@a">@a</td>
                    <td>3/@a/2017</td>
                    <td>3/@a/2017</td>
                    <td>12</td>
                    <td>This is a reason</td>
                    <td>16</td>
                    <td style="width: 0.5%;" id="disable_id_@a" class="disable_cfact">Delete</td>
                    <td style="width: 0.5%;" id="edit_id_@a" class="edit_cfact" >Edit</td>
                </tr>
            }
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#ui-datepicker-div').remove();

        $(function () {
            $('#Dialogcsm_Add').dialog({
                autoOpen: false,
                width: 400,
                height: 600,
                resizable: false,
                draggable: true,
                title: 'Pots Entry',
                closeText: 'Close[x]',
                modal: true,
                position: [1150, 170]
            });
        });
        $(function () {
            $('#Dialogcsm_Edit').dialog({
                autoOpen: false,
                width: 400,
                height: 600,
                resizable: false,
                draggable: true,
                title: 'Pots Edit',
                closeText: 'Close[x]',
                modal: true,
                position: [1150, 170]
            });
        });
    });
</script>
