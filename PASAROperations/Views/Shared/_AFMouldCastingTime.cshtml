<div id="add_mouldcastingtime_div">
    <b>Mould Casting Time</b>
    <br />
    <br />
    <br />



    <table class="af_time_table">
        <tr>
            <td rowspan="2" class="label_datetype">Start Time : &nbsp;</td>
            <td class="label_date">Date</td>
            <td class="label_date">Time (hh:mm)</td>
        </tr>

        <tr>
            <td class="af_date_td">
                <input id="start_date_input3" type="text"  value="@ViewBag.MouldCast_StartDate.ToString("MM/dd/yyyy")" style="float: left;"/></td>
            <td class="af_time_td">
                <select id="start_time_hr_input">
                    @{
                        int hr = Int32.Parse(ViewBag.MouldCast_StartDate.ToString("HH"));
                        int min_ = Int32.Parse(ViewBag.MouldCast_StartDate.ToString("mm"));

                        for (int x = 0; x <= 23; x++)
                        {
                            if (@x <= 9)
                            {

                                if (@x == @hr)
                                {  <option value="@x" selected="selected">@("0" + @x)</option> }
                                else
                                { <option value="@x">@("0" + @x)</option> }
                            }
                            else
                            {

                                if (@x == @hr)
                                {  <option value="@x" selected="selected">@x</option> }
                                else
                                { <option value="@x">@x</option> }


                            }
                        }
                    }

                </select>&nbsp;:
            <select id="start_time_min_input">
                @{
                    int min = Int32.Parse(ViewBag.MouldCast_StartDate.ToString("mm"));


                    for (int x = 0; x <= 59; x++)
                    {
                        if (@x <= 9)
                        {

                            if (@x == @min)
                            {  <option value="@x" selected="selected">@("0" + @x)</option> }
                            else
                            { <option value="@x">@("0" + @x)</option> }
                        }


                        else
                        {

                            if (@x == @min)
                            {  <option value="@x" selected="selected">@x</option> }
                            else
                            { <option value="@x">@x</option> }


                        }
                    }
                }
            </select>
            </td>
        </tr>
    </table>

    <br />
    <br />
    <input id="add_mouldcastingtime_ok_btn" type="button" value="OK" />

    <br />
    <br />

</div>

