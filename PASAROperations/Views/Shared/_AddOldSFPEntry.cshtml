<div id="add_oldsfp_entry" style="height: 80%;">
    <b>Old Slag Floatation Plant Form</b>
    <br />
    <table class="af_time_table">
        <tr>
            <td rowspan="2" class="label_datetype">Date Time : &nbsp;</td>
            <td class="label_date">Date</td>
            <td class="label_date">Time (hh:mm)</td>
        </tr>

        <tr>
            <td class="af_date_td">
                <input id="start_date_input" type="text" style="float: left;" value="@ViewBag.SFP_DDate.ToString("MM/dd/yyyy")" /></td>
            <td class="af_time_td">
                <select id="start_time_hr_input">
                    @{
                        int hr = Int32.Parse(ViewBag.SFP_DDate.ToString("HH"));
                        int min_ = Int32.Parse(ViewBag.SFP_DDate.ToString("mm"));



                        for (int x = 0; x <= 23; x++)
                        {
                            if (@x <= 9)
                            {

                                if (@x == @hr)
                                {  <option value="@x" selected="selected">@("0" + @x)</option> }
                                else
                                { <option value="@x">@("0" + @x)</option> }
                            }
                            else
                            {

                                if (@x == @hr)
                                {  <option value="@x" selected="selected">@x</option> }
                                else
                                { <option value="@x">@x</option> }


                            }
                        }
                    }
                </select>&nbsp;:
            <select id="start_time_min_input">
                @{
                    int min = Int32.Parse(ViewBag.SFP_DDate.ToString("mm"));


                    for (int x = 0; x <= 59; x++)
                    {
                        if (@x <= 9)
                        {

                            if (@x == @min)
                            {  <option value="@x" selected="selected">@("0" + @x)</option> }
                            else
                            { <option value="@x">@("0" + @x)</option> }
                        }


                        else
                        {

                            if (@x == @min)
                            {  <option value="@x" selected="selected">@x</option> }
                            else
                            { <option value="@x">@x</option> }


                        }
                    }
                }
            </select></td>
        </tr>
    </table>
    <div>
        <label>Weigher:</label>
        &nbsp;&nbsp;@Html.DropDownList("weigher_ddl", (SelectList)ViewBag.weigher_list, new { @id = "weigher_ddl" })
        @* //, (SelectList)ViewBag.pot_list, new { @id = "pot_input" })*@
        <br />
        <br />
        <label>Material:</label>
        &nbsp;&nbsp;@Html.DropDownList("material_ddl", (SelectList)ViewBag.material_list, new { @id = "material_ddl" })
    </div>
    <br />
    <br />
    <br />
    <div>
        <input type="button" style="float: right;" value="Add" id="add_oldsfp_btn_p" />
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $("#start_date_input").datepicker({
            showOn: 'button',
            buttonText: 'Show Date',
            buttonImageOnly: true,
            buttonImage: serverpath + '/Images/calendar.png',
            dateFormat: 'mm/dd/yy',
            constrainInput: true
        });

        $(".ui-datepicker-trigger").mouseover(function () {
            $(this).css('cursor', 'pointer');

        });


    });
</script>
