            </tr>
              
            <tr>
                <td class="af_date_td"><input @*disabled="disabled"*@ id="start_date_input_edit_cast" type="text"  value="@ViewBag.starttime.ToString("MM/dd/yyyy")"/></td>
                <td class="af_time_td">
            <select id="start_time_hr_input_edit_cast" @*disabled="disabled"*@>
            @{
                 int hr;
                 int min_ = Int32.Parse(ViewBag.starttime.ToString("mm"));
                if (min_ == 60){

                    hr = Int32.Parse(ViewBag.starttime.ToString("HH"));
                    
                }else{
                    hr = Int32.Parse(ViewBag.starttime.ToString("HH"));
                }
                
                
                for (int x = 0; x <= 23; x++ )
                { 
                if (@x <= 9){

                    if (@x == @hr)
                    {  <option value="@x" selected="selected">@("0" + @x)</option> }
                    else { <option value="@x">@("0" + @x)</option> }          
                }
                      
                      
                      else{

                     if (@x == @hr)
                          {  <option value="@x" selected="selected">@x</option> }
                    else { <option value="@x">@x</option> }          
                

                      }
                }
                }
                                                          
            </select>&nbsp;:
            <select id="start_time_min_input_edit_cast" @*disabled="disabled"*@>
              @{
                  int min = Int32.Parse(ViewBag.starttime.ToString("mm"));
                
                
                for (int x = 0; x <= 59; x++ )
                { 
